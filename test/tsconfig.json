{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2017",
        "declaration": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*",
                "test/types/*"
            ]
        }
    },
    "include": [
      "src/**/*",
      "test/**/*.ts"
  ]
}
